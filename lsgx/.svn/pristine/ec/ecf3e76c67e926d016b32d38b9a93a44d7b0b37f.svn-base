input[type="button"]{
-webkit-appearance: none;
}



/*外框背景(start)*/
.wrap-top{ width:1083px; height:27px; background:url(../image/shared_top.png) no-repeat 0 0; margin:0 auto;}
.wrap-middle{ width:1083px; min-height:600px; height:auto; background:url(../image/shared_the.png) repeat-y 0 0; margin:0 auto;}
.wrap-bottom{ width:1083px; height:40px; background:url(../image/shared_down.png) no-repeat 0 0; margin:0 auto;}


/*头部*/
.share-top{ width:1021px; height:91px; margin:0 auto;}
.share-top .share-left{ float:left; width:432px; height:73px; padding:9px 0 0 3px;}
.share-top .share-right{ float:left; padding:34px 0 0 34px;}


.share-nav{ width:1021px; height:34px; margin:16px auto 12px; border-bottom:3px solid #00923f;}
.share-nav .shnav_left{ height:34px; width:730px; float:left;}
.share-nav .shnav_left li{ float:left; width:90px; height:34px; margin-right:28px; }
.share-nav .shnav_left li a{ display:block;line-height:34px; text-align:center; font-size:14px; color:#000000;}
.share-nav .shnav_left li a.active{ background-color:#00923f; color:#fff; border-top-left-radius:6px;border-top-right-radius:6px;}

.share-nav .shnav_contact{ float:right; padding-right:10px; font-size:18px; color:#00923f; line-height:34px; font-style:italic;}


/*尾部*/
.foot-link{ height:auto; display:block; width:1021px; margin:0 auto;}
.foot-link .folink-title{  height: 55px; line-height: 55px; font-size: 22px; color: #000000;}
.foot-link .folink-title span{ font-size: 14px; text-transform: uppercase; margin-left: 8px;}

.foot-link .folink-conn{ border-top:1px solid #d8d8d8; border-bottom:1px solid #d8d8d8; line-height:54px;}
.foot-link .folink-conn a{ font-size:14px; color:#000000; display:inline-block; margin-right:22px;}
.foot-link .folink-conn a:hover{ color:#ee4900;}

.foot-copy{ height:74px; margin-top:14px;}
.foot-copy p{ height:30px; line-height:30px; text-align:center; color:#000000; font-size:12px;}
.foot-copy p a{ font-size:12px; color:#000;}
.foot-copy p a:hover{ color:#ee4900;}


