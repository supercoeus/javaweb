@charset "utf-8";
/* CSS Document */
/*b标签为等级数字样式,请不要使用*/

html,body,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,form,fieldset,input,lable,textarea,p,blockquote,td {margin:0;padding:0;}
h1,h2,h3,h4,h5,h6{ font-weight:normal;}
body{ font-size:12px;font-family:"Microsoft Yahei",sans-serif; background-color:#b4c49a;}
label, input, select {vertical-align:middle; border:none; }
strong{ font-weight:normal}
img, button {background:none;border:0 none;}
ol,ul,li {list-style:none;}
i,em{ font-style:normal;}
a:link {color: #333;text-decoration: none;}
a:visited {text-decoration: none;color: #333;}
a:hover {text-decoration: none;color: #e8320d;}
a:active {text-decoration: none;color: #333;}

.left{ float:left;}
.right{ float:right;}

a:focus,*:focus { outline:none;}
.clearfix:before,.clearfix:after { content:""; display:table;}
.clearfix:after {clear:both; overflow:hidden;}
.clearfix { zoom:1; /* for ie6 & ie7 */}
.clearer { clear:both; display:block;	*display:none; font-size:0; height:0; line-height:0; overflow:hidden;}
.clear { clear:both; display:block; font-size:0; height:0; line-height:0; overflow:hidden;}


